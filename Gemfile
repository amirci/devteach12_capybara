  gem 'rspec-rails'
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'spork'
  gem 'shoulda-matchers'  
  gem 'faker'
  gem 'capybara-webkit'
end

